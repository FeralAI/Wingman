@page "/email/email-options"
@layout ClassLayout

@using Microsoft.Extensions.Options
@using NETStandardLibrary.Common;
@inject IOptionsMonitor<NETStandardLibrary.Email.EmailOptions> options

<EmailOptionsList @bind-OptionsLookup="optionsLookup" />

@code {
	private Dictionary<string, object> optionsLookup { get; set; }

	protected override Task OnInitializedAsync()
	{
		optionsLookup = typeof(NETStandardLibrary.Email.EmailOptions).GetPropertyValues(options.CurrentValue);
		return Task.CompletedTask;
	}
}
