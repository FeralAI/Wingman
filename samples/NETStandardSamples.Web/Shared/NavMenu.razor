@using System.Text.RegularExpressions
@using NETStandardSamples.Web.Services

@inject PageService PageService

<div class="top-row pl-4 navbar navbar-dark">
	<a class="navbar-brand" href="">NETStandardSamples.Web</a>
	<button class="navbar-toggler" @onclick="ToggleNavMenu">
		<span class="navbar-toggler-icon"></span>
	</button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
	<ul class="nav flex-column">
		<li class="nav-item px-3">
			<NavLink class="nav-link" href="" Match="NavLinkMatch.All">
				<span class="oi oi-home" aria-hidden="true"></span> Home
			</NavLink>
		</li>
		<li><br><br></li>
		@foreach (var classPage in ClassPages)
		{
			<li class="nav-item px-3">
				<NavLink class="nav-link" href="@(classPage.Item2)">
					<span class="oi oi-list-@(classPage.Item3)" aria-hidden="true"></span> @classPage.Item1
				</NavLink>
			</li>
		}
	</ul>
</div>

@code {
	private bool collapseNavMenu = true;

	private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;
	private List<Tuple<string, string, string>> ClassPages;

	protected override Task OnInitializedAsync()
	{
		var pageTypes = PageService.GetAllPages();
		ClassPages = new List<Tuple<string, string, string>>();
		var regex = new Regex(@"([A-Z])");
		foreach (var pageType in pageTypes)
		{
			var name = pageType.FullName.Replace("NETStandardSamples.Web.Pages.", "");
			var url = regex.Replace(name, " $1")
				.Replace(".", "/")
				.Trim()
				.Replace(" ", "-")
				.Replace("/-", "/")
				.ToLower();
			ClassPages.Add(new Tuple<string, string, string>(name, url, "rich"));
		}

		return Task.CompletedTask;
	}

	private void ToggleNavMenu()
	{
		collapseNavMenu = !collapseNavMenu;
	}
}
